{
  "name": "circle",
  "version": "3.0.0",
  "description": "Secure group communication platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "security-audit": "npm audit && snyk test",
    "force-security-check": "npm audit && snyk test && eslint . --plugin security",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": "11.2.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.0",
    "socket.io": "^4.5.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.0",
    "csurf": "^1.11.0",
    "cookie-parser": "^1.4.6",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.8.2",
    "dotenv": "^16.0.3",
    "redis": "^4.6.0",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "uuid": "^9.0.0",
    "sanitize-html": "^2.7.0",
    "xss-clean": "^0.1.1",
    "hpp": "^0.2.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-security": "^1.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "snyk": "^1.1234.0"
  },
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "npm@11.2.0"
} 